+  private static class PendingReplPipeline {
+    final Block block;
+    final DatanodeInfo[] pipeline;
+    public PendingReplPipeline(Block block, DatanodeInfo[] pipeline) {
+      super();
+      this.block = block;
+      this.pipeline = pipeline;
+    }
+  }
