+              + "umask 000\n" 
+              + "msg=Welcome\n"
+              + "echo $msg\n"
+              + " if [ \"X$1\" != \"X0\" ]\nthen\n" 
+              + "  sh " + shellScript + " $(($1-1))\n" 
+              + "else\n" 
+              + "  while(true)\n"
+              + "  do\n"
+              + "    sleep 2 \n" 
+              + "  done\n" 
+              + "fi";
+    }else {
+     script =  "#!/bin/sh\n" 
+             + "umask 000\n" 
+             + "msg=Welcome\n"
+             + "echo $msg\n"
+             + " if [ \"X$1\" != \"X0\" ]\nthen\n" 
