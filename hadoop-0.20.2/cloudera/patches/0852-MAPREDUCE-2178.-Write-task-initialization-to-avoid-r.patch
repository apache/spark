+    FileSystem fs = FileSystem.getLocal(conf);
+    File TMP_ROOT_DIR = new File("/tmp");
+    String TEST_ROOT_DIR = TMP_ROOT_DIR.getAbsolutePath() 
+            + Path.SEPARATOR + "ChildProc_" + jobName;
+    Path scriptDir = new Path(TEST_ROOT_DIR);
