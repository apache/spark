--- a/src/mapred/mapred-default.xml
+++ b/src/mapred/mapred-default.xml
@@ -615,6 +615,15 @@
 </property>
 
 <property>
+  <name>mapred.heartbeats.in.second</name>
+  <value>100</value>
+  <description>Expert: Approximate number of heart-beats that could arrive 
