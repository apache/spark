+          }
+        }
+      }
       if (!rjob.localized) {
         Path localJobConfPath = initializeJob(t, rjob, ttAddr);
         JobConf localJobConf = new JobConf(localJobConfPath);
@@ -1061,12 +1095,21 @@ public class TaskTracker implements MRConstants, TaskUmbilicalProtocol,
