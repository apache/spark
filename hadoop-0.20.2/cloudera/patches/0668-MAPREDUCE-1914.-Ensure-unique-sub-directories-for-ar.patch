   protected Path firstCacheFile;
   protected Path secondCacheFile;
@@ -481,7 +481,7 @@ public class TestTrackerDistributedCacheManager extends TestCase {
     conf2.set("mapred.local.dir", ROOT_MAPRED_LOCAL_DIR.toString());
